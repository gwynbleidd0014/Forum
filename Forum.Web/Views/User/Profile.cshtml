@using Forum.Application.Users.Response
@model UserResponseModel

<div class="row gutters-sm custom-height-row">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    <div>
                        @await Html.PartialAsync("_ProfilePicture")
                    </div>
                    <div class="mt-3">
                        <h4>@Model.FirstName @Model.LastName</h4>
                        <div class="d-flex flex-row justify-content-around" style="gap:2em">
                            <form id="uploadForm" asp-controller="Image" asp-action="Upload" enctype="multipart/form-data">
                                <label for="fileUpload" class="btn btn-primary">
                                    Upload
                                </label>
                                <input id="fileUpload" type="file" name="file" style="display: none;" />
                            </form>
                            @if (!(Model.ImgPath == null))
                            {
                                <form asp-controller="Image" asp-action="Remove">
                                    <button class="btn btn-primary" type="submit">Remove</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <h6>Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.FirstName
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <h6>Surname</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.LastName
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <h6>Username</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.UserName
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <h6>Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.Email
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-sm-3">
                        <h6>Phone Number</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.PhoneNumber
                    </div>
                </div>
                <div class="row gutters-sm ">
                    <div class="col-sm-4">
                        <a class="btn btn-primary text-white" asp-action="ChangePassword">Change Password</a>
                    </div>
                    <div class="col-sm-4">
                        <a class="btn btn-primary text-white" asp-action="Update">Edit Personal Information</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Get the file input element
        var fileInput = document.getElementById('fileUpload');

        // Add an event listener to the file input element
        fileInput.addEventListener('change', function () {
            // Get the form element
            var form = document.getElementById('uploadForm');
            // Submit the form
            form.submit();
        });
    </script>

}
