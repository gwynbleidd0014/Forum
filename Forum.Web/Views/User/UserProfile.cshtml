@using Forum.Application.Users.Response
@model UserResponseModel

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <div>
                            @await Html.PartialAsync("_ProfilePicture")
                        </div>
                        <div class="mt-3">
                            <h4>@Model.UserName</h4>
                            <div class="d-flex flex-row justify-content-around gap-3" >
                                <form asp-controller="Topic" asp-action="UserTopics" enctype="multipart/form-data" method="get">
                                    <input name="id" value="@Model.Id" hidden />
                                    <button class="btn btn-primary">
                                        User's Topics
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
